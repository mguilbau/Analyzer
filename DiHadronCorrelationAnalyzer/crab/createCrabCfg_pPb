### chargedepcorr
tag=pttrg033_ptassallweight_etaass445_reverse_eff1_zvtx1_bin01_v13
type=chargedepcorr

### epetadeco
#tag=pttrg033_ptassallweight_etaass445_reverse_eff1_v42
#type=epetadeco

### ebyeflow
#tag=pttrg033_rereco_eff1_v3
#type=ebyeflow

cat > crab_${type}_n120150_pPb.cfg << EOF 
[CRAB]
jobtype = cmssw
scheduler = remoteGlidein
use_server   = 0

[CMSSW]
use_dbs3 = 1 
dbs_url                 = phys03
datasetpath             = $dataset
pset                    = ../cfg/${type}_pPb_n120150_cfg.py
total_number_of_lumis   = -1 
lumis_per_job     = $njobs 
#output_file = ${type}.root

[USER]
copy_data               = 1
storage_element         = T2_US_MIT

user_remote_dir = $pdname/${type}_n120150_$tag
ui_working_dir =  $pdname/${type}_n120150_$tag
check_user_remote_dir   = 0

[GRID]
#max_rss = 3000
#se_white_list = mit.edu
allow_overflow = 0
EOF

